{
  "defaultSeverity": "error",
  // The rules below extend TSLint's recommended rules.
  // https://github.com/palantir/tslint/blob/master/src/configs/recommended.ts
  "extends": [
    "tslint:recommended",
    "airbnb-base"
  ],
  // Any rules in jsRules ad rules will override those from the base config we are extending.
  // See https://palantir.github.io/tslint/rules/
  "jsRules": {},
  "rules": {
    "no-multiple-empty-lines":["warn", {
      "max": 1
    }],
    "comma-dangle": "off",
    "max-len": ["warn", 182],
    "spaced-comment": "off",
    "object-curly-spacing": "off", // We usually want spaces after braces, but it doesn't need to be enforced for config files
    "quote-props": "off", // Todo: Consider other options
    "quotes": ["warn","single"],
    "vars-on-top": "off", // Vars are not allowed, so this rule doesn't apply
    "import/no-extraneous-dependencies": "off", // Allow for require statements in Webpack config files, since it's common practice
    "no-useless-escape": "off", // Webpack configs require escaping in test conditions
    "prefer-spread": "off", // Too opinionated.
    "prefer-rest-params": "off", // Too opinionated
    "prefer-destructuring": "off", // Too opinionated
    "prefer-template": "off", // Todo: We may want to leave this enabled and refactor our Webpack config files.
    "no-path-concat": "off", // Too opinionated
    "no-underscore-dangle": "off", // Too opinionated
    "no-floating-decimal": "off", // Too opinionated
    "no-multi-spaces": ["warn", { "ignoreEOLComments": true}],
    "no-trailing-spaces": ["warn", { "ignoreComments": true }], // Allow trailing spacings in comments, since they'll be removed anyway.
    "import/order": "off", // Too opinionated
    "no-unused-vars": "off", // Useful, but a little too strict. Someones components may have vars that appear on used, but are used by the template
    "no-param-reassign": "off" // Use in our webpack configs. Todo: Consider refactoring so we can leave this enabled.
  },
  // A list of relative or absolute paths to directories that contain custom rules.
  "rulesDirectory": []
}
